{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "baseUrl": "./src",
        "paths": {
            "shared": ["./shared"]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": false
    },
    "include": ["src"]
}